---
import Heads from "../components/heads.astro";
import Icon from "../components/icon.astro";
---

<Heads title="Login - Eventto">
  <div class="min-h-screen flex items-center justify-center p-4">
    <a href="index.html" class="absolute top-6 left-6 flex items-center text-sm font-medium text-slate-500 hover:text-indigo-900 transition-colors group">
      <span class="w-4 h-5.5 mr-2 group-hover:-translate-x-1 transition-transform">←</span>
      Kembali ke Beranda
    </a>

    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-100 relative">
      <div class="px-8 py-10">
        <!-- Header -->
        <div class="text-center mb-10">
          <h1 class="text-2xl font-bold text-slate-900 mb-2">Login Portal</h1>
          <p class="text-sm text-slate-500">Masuk dengan akun Eventto Anda.</p>
        </div>

        <!-- Form -->
        <form action="#" method="POST" class="space-y-5">
          <!-- Input NPM / Email -->
          <div>
            <label for="npm" class="block text-sm font-semibold text-slate-700 mb-1.5">NPM</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="w-5 h-5 text-slate-400"><Icon icon="person" /></span>
              </div>
              <input
                type="text"
                id="npm"
                name="npm"
                class="w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-slate-900 placeholder-slate-400 sm:text-sm"
                placeholder="Contoh: 10120123"
                required
              />
            </div>
          </div>

          <!-- Input Password -->
          <div>
            <div class="flex justify-between items-center mb-1.5">
              <label for="password" class="block text-sm font-semibold text-slate-700">Password</label>
            </div>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="w-5 h-5 text-slate-400"><Icon icon="lock" /></span>
              </div>
              <input
                type="password"
                id="password"
                name="password"
                class="w-full pl-10 pr-12 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-slate-900 placeholder-slate-400 sm:text-sm"
                placeholder="••••••••"
                required
              />

              <!-- Toggle Password Visibility -->
              <button type="button" id="togglePassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-indigo-600 transition-colors focus:outline-none">
                <!-- Icon Eye (Default) -->
                <span class="w-5 h-5" id="iconEye"><Icon icon="eye" /></span>
                <!-- Icon Eye Off (Hidden) -->
                <span class="hidden w-5 h-5" id="iconEyeOff"><Icon icon="eyeOff" /></span>
              </button>
            </div>
            <div class="text-right mt-1">
              <a href="#" class="text-xs font-medium text-indigo-600 hover:text-indigo-800">Lupa Password?</a>
            </div>
          </div>

          <!-- Remember Me -->
          <div class="flex items-center">
            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-slate-300 rounded cursor-pointer" />
            <label for="remember-me" class="ml-2 block text-sm text-slate-600 cursor-pointer select-none">Ingat saya</label>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-indigo-900 text-white py-3 rounded-xl font-bold text-base hover:bg-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-900/20 transition-all flex justify-center items-center gap-2 group shadow-lg shadow-indigo-900/20"
          >
            Masuk
            <span class="w-4 h-6 group-hover:translate-x-1 transition-transform">→</span>
          </button>
        </form>
      </div>

      <!-- Footer Card -->
      <div class="bg-slate-50 px-8 py-4 border-t border-slate-100 text-center">
        <p class="text-xs text-slate-400">&copy; 2026 Loket23Depok. Universitas Gunadarma.</p>
      </div>
    </div>
  </div>

  <!-- Script untuk Toggle Password -->
  <script is:inline>
    const togglePassword = document.querySelector("#togglePassword");
    const passwordInput = document.querySelector("#password");
    const iconEye = document.querySelector("#iconEye");
    const iconEyeOff = document.querySelector("#iconEyeOff");

    togglePassword.addEventListener("click", function () {
      // Toggle type attribute
      const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
      passwordInput.setAttribute("type", type);

      // Toggle icons
      iconEye.classList.toggle("hidden");
      iconEyeOff.classList.toggle("hidden");
    });
  </script>
</Heads>
